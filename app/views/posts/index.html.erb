
<div class="top-list">
<h3>予定一覧</h3>
<p><%= link_to "新規追加", :new_post %></p>
</div>

<% if flash[:notice] %>
   <p class="notice"><%= flash[:notice] %></p>
<% end %>


<table>
    <thead>
        <tr>
        <th>id</th>
        <th>タイトル</th>
        <th>開始日</th>
        <th>終了日</th>
        <th>終日</th>
        <th>更新日時</th>
        <th></th>
        <th></th>
        <th></th>
        </tr>
    </thead>

    <tbody>
        <% @posts.each do |post| %>
        <tr>
            <td><%= post.id %></td>
            <td><%= post.title %></td>
            <td><%= post&.start_date&.strftime('%Y/%m/%d') %></td>
            <td><%= post&.end_date&.strftime('%Y/%m/%d') %></td>
            <td>
            <% if post.checkbox == 1 %>
                <%= '○' %>
            <% else %>
                <%= '' %>
            <% end %>
            </td>
            <td><%= post.updated_at.to_s(:datetime_jp) %></td>
            <td>
                <%= link_to "詳細", post %>
            </td>
            <td>
                <%= link_to "編集", [:edit, post] %>
            </td>
            <td>
                <%= link_to "削除", post, method: :delete, data: { confirm: "本当に削除しますか？" } %>
                <%# <%= button_to '削除', post, class: 'btn btn-outline-dark', method: :delete %>
            </td>
        </tr>
        <% end %>
    </tbody>
</table>

<div class="count">
    <h3><%= "予定合計　#{Post.count}件" %></h3>
    <p><%= "本日の日付#{Date.today.strftime('%Y/%m/%d')}" %></p>
</div>
 