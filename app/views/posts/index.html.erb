<h3>予定一覧</h3>
<p><%= link_to "新規追加", :new_post %></p>
<table>
<thead>
    <tr>
    <th>id</th>
    <th>タイトル</th>
    <th>開始日</th>
    <th>終了日</th>
    <th>終日</th>
    <th>更新日時</th>
    </tr>
</thead>

<tbody>
    <% @posts.each do |post| %>
    <tr>
        <td><%= post.id %></td>
        <td><%= post.title %></td>
        <td><%= post&.start_date&.strftime('%Y/%m/%d') %></td>
        <td><%= post&.end_date&.strftime('%Y/%m/%d') %></td>
        <td>
        <% if post.checkbox == 1 %>
            <%= '○' %>
        <% else %>
            <%= '' %>
        <% end %>
        </td>
        <td><%= post.updated_at.to_s(:datetime_jp) %></td>
    </tr>
    <% end %>
</tbody>
</table>
 
 