<h3>新規追加</h3>

<%= render "shared/error", obj: @post %>

<%= form_with model: @post do |f| %>
  <div class="each-post">
    <div>
      <%= f.label :title ,"タイトル" %>
      <%= f.text_field :title %>
    </div>

    <div>
      <%= f.label :start_date ,"開始日" %>
      <%= f.date_field :start_date %>
    </div>

    <div>
      <%= f.label :end_date ,"終了日" %>
      <%= f.date_field :end_date %>
    </div>

    <div class="checkbox">
      <%= f.check_box :checkbox, id: :checkbox,:as => :boolean %>
      <%= label_tag :checkbox, "終日の場合はチェックを入れます" %>
    </div>

    <div>
      <%= f.label :content ,"スケジュールメモ" %>
      <%= f.text_area :content %>
    </div>

  </div>

  <div>
    <ul>
      <li><%= f.submit "保存"%></li>
      <li><%= link_to "キャンセル", :posts %></li>
    </ul>
  </div>
<% end %>