<h3>新規追加</h3>

<%= render "shared/error", obj: @post %>

<%= form_with model: @post do |f| %>
  <table>
    <tr>
      <th><%= f.label :title ,"タイトル" %></th>
      <td><%= f.text_field :title %></td>
    </tr>

    <tr>
      <th><%= f.label :start_date ,"開始日" %></th>
      <td><%= f.date_field :start_date %></td>
    </tr>

    <tr>
      <th><%= f.label :end_date ,"終了日" %></th>
      <td><%= f.date_field :end_date %></td>
    </tr>

    <tr>
      <%#<th><%= f.label :checkbox ,"終日の場合はチェックを入れます" %><%#</th>%%>
      <td><%= f.check_box :checkbox, id: :checkbox,:as => :boolean %>
      <%= label_tag :checkbox, "終日の場合はチェックを入れます" %></td>
    </tr>

    <tr>
      <th><%= f.label :content ,"スケジュールメモ" %></th>
      <td><%= f.text_area :content %></td>
    </tr>

  </table>

  <div>
    <ul>
      <li><%= f.submit "保存"%></li>
      <li><%= link_to "キャンセル", :posts %></li>
    </ul>
  </div>
<% end %>