<h3 class="back"><%= link_to "一覧に戻る", :posts %></h3>
<h3 class="show-edit"><%= link_to "編集", [:edit, @post] %></h3>

<table class="show-table">
   <tr>
     <th>タイトル</th>
     <td><%= @post.title %></td>
   </tr>
   <tr>
     <th>開始日</th>
     <td><%= @post&.start_date&.strftime('%Y/%m/%d') %></td>
   </tr>
   <tr>
     <th>終了日</th>
     <td><%= @post&.end_date&.strftime('%Y/%m/%d') %></td>
   </tr>
   <tr>
     <th>スケジュールメモ</th>
     <td><%= @post.content %></td>
   </tr>
</table>